{
  "name": "universalvideomaximizer",
  "version": "3.1.120",
  "license": "MIT",
  "bugs": "https://github.com/trophygeek/universalvideomaximizer/issues",
  "npmClient": "yarn",
  "dependencies": {
    "@types/chrome": "^0.0.240"
  },
  "devDependencies": {
    "@types/jest": "^29.5.7",
    "@types/node": "^20.9.3",
    "copy-webpack-plugin": "^9.1.0",
    "glob": "^7.2.3",
    "jest": "^29.7.0",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-loader": "^8.4.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.10.0"
  },
  "browserslist": {
    "production": [
      ">0.2%"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "scripts": {
    "watch": "webpack --config webpack/webpack.dev.js --watch",
    "style": "prettier --write \"src/**/*.{ts,tsx}\"",
    "build:prod": "webpack --config webpack/webpack.prod.js",
    "build:dev": "webpack --config webpack/webpack.dev.js",
    "clean": "rimraf build",
    "test": "npx jest",
    "update": "git checkout -- yarn.lock && yarn install && yarn upgrade-interactive --lastest",
    "buildpackage": "yarn clean && yarn build:prod && node ./scripts/bundlepackage.js"
  }
}
